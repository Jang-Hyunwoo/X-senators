  <div class="donation-container">
    <div class="donation-box">
      <form action="/sponsor-senator" method="POST">
                  <div class="title poor"> <%= senatorInfo['NAME'] %> 의원에게 후원하기</div>
                  
                  <div class="fields">
                      <input type="text" id="firstName" name="firstName" placeholder="성"> </input>
                      <input type="text" id="lastName" name="lastName" placeholder="이름"> </input>
                      <input type="text" id="email" name="message" placeholder="남기고 싶은 말 (100자 이내)"> </input>
                  </div>
                  
                  <div class="amount">
                      <div class="button">₩ 10,000</div>
                      <div class="button">₩ 50,000</div>
                      <div class="button">₩ 100,000</div>
                      <div class="button">₩<input type="text" name="money" class="set-amount" placeholder=""></input></div>
                  </div>
                  
                  <div class="switch">
                      <input type="radio" class="switch-input" name="view" value="One-Time" id="one-time" checked="">
                      <label for="one-time" class="switch-label switch-label-off">한 번만</label>
                      <input type="radio" class="switch-input" name="view" value="Monthly" id="monthly">
                      <label for="monthly" class="switch-label switch-label-on">매달 후원</label>
                      <span class="switch-selection"></span>
                  </div>
                  
                  <div class="checkboxes">
                    <input type="checkbox" id="receipt" name="emailReceipt" class="checkbox"/>
                    <label for="receipt">이메일로 영수증 송부</label>
                  </div>
                  
                  <input type="hidden" name="senatorId" value="<%= senatorInfo['id'] %>"/>
                  <div class="confirm">
                  </div>
                  
          <button type="submit" class="donate-button">
            <i class="fa fa-credit-card"></i> 후원하기</div>
          </button>
        </form>
    </div>
  </div>
  
